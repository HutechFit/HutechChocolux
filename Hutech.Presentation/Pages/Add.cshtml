@page
@model AddModel
@{
    ViewData["Title"] = "Add";
}

<section class="contact_section layout_padding">
    <div class="container-fluid">
        <div class="col-md-5 col-lg-4 offset-md-1 offset-lg-2">
            <div class="form_container">
                <div class="heading_container">
                    <h2>
                        Add new product
                    </h2>
                </div>
                <form method="post"
                      enctype="multipart/form-data"
                      asp-antiforgery="true">
                    <div>
                        <input type="text" placeholder="Name" name="Name"/>
                        <span asp-validation-for="ProductVm.Name" class="text-danger"></span>
                    </div>
                    <div>
                        <input step="1" min="0" type="number" placeholder="Price" name="Price"/>
                        <span asp-validation-for="ProductVm.Price" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="file" placeholder="Image" name="Image"/>
                        <span asp-validation-for="ProductVm.Image" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="text" class="message-box" placeholder="Description" name="Description"/>
                        <span asp-validation-for="ProductVm.Description" class="text-danger"></span>
                    </div>
                    <div>
                        <select class="w-100" style="height: 50px;" name="CategoryId">
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="d-flex ">
                        <button>
                            ADD
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
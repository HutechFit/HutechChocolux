@page
@using Microsoft.IdentityModel.Tokens
@model ManagementModel
@{
    ViewData["Title"] = "Management";
}

<section class="chocolate_section layout_padding table-responsive">
    @if (Model.Products.ToList().IsNullOrEmpty() 
         && Model.Search.IsNullOrEmpty())
    {
        <div class="container">
            <div class="heading_container">
                <h2 class="text-danger">
                    Caution
                </h2>
                <p>
                    There are no chocolate products at the moment.
                </p>
                <a asp-page="Add"
                   class="btn btn-primary">
                    Add new product
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-light">
                    <a asp-page="Add"
                       class="btn btn-primary">
                        NEW PRODUCT
                    </a>
                    <form class="d-flex" method="get">
                        <input asp-for="Search"
                               type="search"
                               class="form-control me-2"
                               placeholder="Search by name..."
                               aria-label="Search">
                        <button class="btn btn-success" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>
                </nav>
            </div>
        </div>
        <table class="table table-striped table-hover w-100">
            <thead>
            <tr>    
                <th scope="col">
                    <a asp-page="Management"
                       asp-route-sortby="Name"
                       class="sort-link">
                        Name
                    </a>
                </th>
                <th scope="col">
                    <a asp-page="Management"
                       asp-route-sortby="Price"
                       class="sort-link">
                        Price
                    </a>
                </th>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">
                    <a asp-page="Management"
                       asp-route-sortby="Status"
                       class="sort-link">
                        Status
                    </a>
                </th>
                <th scope="col">
                    <a asp-page="Management"
                       asp-route-sortby="Category"
                       class="sort-link">
                        Category
                    </a>
                </th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C2")</td>
                    <td>
                        @if (product.Image.IsNullOrEmpty())
                        {
                            <img src="https://fakeimg.pl/100x100?text=No+image"
                                 loading="lazy"
                                 alt="Unknown image">
                        }
                        else
                        {
                            <img asp-append-version="true"
                                 src="./images/@product.Image"
                                 loading="lazy"
                                 alt="@product.Name"
                                 width="100"
                                 height="100">
                        }
                    </td>
                    <td>
                        @if (product.Description.IsNullOrEmpty())
                        {
                            <span class="text-info">No description</span>
                        }
                        else
                        {
                            <span>@product.Description</span>
                        }
                    </td>
                    <td>
                        @if (product.Status == 0)
                        {
                            <span class="text-success">In stock</span>
                        }
                        else
                        {
                            <span class="text-danger">Out of stock</span>
                        }
                    </td>
                    <td>@product.Category?.Name</td>
                    <td>
                        <a asp-page="Edit"
                           asp-route-id="@product.Id"
                           class="btn btn-info">
                            Edit
                        </a>
                        <a asp-page="Management"
                           asp-route-id="@product.Id"
                           asp-page-handler="Delete"
                           class="btn btn-danger"
                           id="delete"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <ul class="pagination">
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        @{ var p = i; }
                        <a asp-page="Management"
                           asp-route-currentpage="@p"
                           class="page-link">@p</a>
                    </li>
                }
            </ul>
        </div>
    }
</section>
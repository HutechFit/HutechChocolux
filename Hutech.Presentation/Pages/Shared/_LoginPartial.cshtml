@using Microsoft.AspNetCore.Identity
@using Hutech.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage"
           class="nav-link text-info"
           asp-area="Identity"
           asp-page="/Account/Manage/Index"
           title="Manage">
            <i class="fas fa-user-cog"></i>
            Your Profile
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" 
              class="form-inline" 
              asp-area="Identity" 
              asp-page="/Account/Logout" 
              asp-route-returnUrl=
              "@Url.Page("/Index", new { area = "" })">
            <button id="logout" 
                    type="submit" 
                    class="btn btn-outline-danger text-dark">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary text-dark"
           id="login"
           asp-area="Identity"
           asp-page="/Account/Login">
                <i class="fa-solid fa-user"></i>
            Login
        </a>
    </li>
}
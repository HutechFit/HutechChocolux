<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"]</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="keywords" content="Chocolate, Sweet, Candy, Cake, Hutech, Chocolux"/>
    <meta name="description" content="Chocolux - Hutech University"/>
    <meta name="author" content="Nguyễn Xuân Nhân"/>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="css/slick-theme.css"/>
    <link href="css/font-awesome.min.css" rel="stylesheet"/>
    <link href="css/style.css" rel="stylesheet"/>
    <link href="css/responsive.css" rel="stylesheet"/>
</head>

<body class="@if (!ReferenceEquals(ViewData["Title"], "Homepage")) { <text>sub_page</text> }">

<div class="main_body_content">
    <div class="hero_area">
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" asp-page="Index">
                        Hutech Chocolux
                    </a>
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" asp-page="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="Menu">Menu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="Cart">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="Management">Management</a>
                            </li>
                        </ul>
                        <div class="quote_btn-container">
                            <a asp-page="Login">
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        @if (ReferenceEquals(ViewData["Title"], "Homepage"))
        {
            <section class="slider_section">
                <div id="customCarousel1">
                    <div class="container">
                        <div class="col-md-6">
                            <div class="detail_box">
                                <h1>
                                    Chocolate <br>
                                    <span>
                                        Yummy
                                    </span>
                                </h1>
                            </div>
                        </div>
                        <div class="col-md-4 ml-auto">
                            <div class="img-box">
                                <img asp-append-version="true"
                                     src="images/slider-img.png"
                                     loading="lazy"  
                                     alt="slider">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
    @RenderBody()
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row info_main_row">
                <div class="col-md-6 col-lg-3">
                    <div class="info_links">
                        <h4>
                            Menu
                        </h4>
                        <div class="info_links_menu">
                            <a asp-page="Index">Home</a>
                            <a asp-page="Menu">Menu</a>
                            <a asp-page="Cart">Cart</a>
                            <a asp-page="Management">Management</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="info_insta">
                        <h4>
                            Facts
                        </h4>
                        <div class="insta_box">
                            <div class="img-box">
                                <img asp-append-version="true"
                                     src="images/insta-img.png"
                                     loading="lazy"
                                     alt="insta">
                            </div>
                            <p>
                                Chocolate is a special gift for your loved ones
                            </p>
                        </div>
                        <div class="insta_box">
                            <div class="img-box">
                                <img asp-append-version="true"
                                     src="images/insta-img.png"
                                     loading="lazy"
                                     alt="insta">
                            </div>
                            <p>
                                Cake is a combination of many flavors
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="info_detail">
                        <h4>
                            Company
                        </h4>
                        <p class="mb-0" align="justify">
                            Hutech chocolux is a small, family-run chocolate shop in the heart of Ho Chi Minh City.
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <h4>
                        Contact Us
                    </h4>
                    <div class="info_contact">
                        <a href="https://goo.gl/maps/hoLPJWY6rJoF1a8f6">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                Location
                            </span>
                        </a>
                        <a href="tel:02854457777">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                Call 028 5445 7777
                            </span>
                        </a>
                        <a href="mailto:hutech@hutech.edu.vn">
                            <i class="fa fa-envelope"></i>
                            <span>
                                hutech@hutech.edu.vn
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<footer class="container-fluid footer_section">
    <div class="container">
        <div class="col-md-11 col-lg-8 mx-auto">
            <p>
                &copy; <span id="displayYear"></span> - All Rights Reserved By
                <a href="https://hutech.edu.vn/" target="_blank">Hutech University</a>
            </p>
        </div>
    </div>
</footer>
<script src="js/jquery-3.4.1.min.js"></script>
<script src="js/bootstrap.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.js"></script>
<script src="js/custom.js"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
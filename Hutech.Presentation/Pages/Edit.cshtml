@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.IdentityModel.Tokens
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<section class="contact_section layout_padding">
    <div class="container-fluid">
        <div class="col-md-5 col-lg-4 offset-md-1 offset-lg-2">
            <div class="form_container">
                <div class="heading_container">
                    <h2>
                        Update Product
                    </h2>
                </div>
                <form method="post"
                      enctype="multipart/form-data"
                      asp-page-handler="Add"
                      asp-antiforgery="true">
                    <input asp-for="ProductRequest.Id"
                           type="hidden"
                           name="Id"
                           value="@Model.Product.Id"/>
                    <div>
                        <input asp-for="ProductRequest.Name"
                               type="text"
                               placeholder="Name"
                               name="Name"
                               value="@Model.Product.Name"/>
                        <span asp-validation-for="ProductRequest.Name"class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="ProductRequest.Price"
                               step="1"
                               min="0"
                               type="number"
                               placeholder="Price"
                               name="Price"
                               value="@Model.Product.Price"/>
                        <span asp-validation-for="ProductRequest.Price" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <select class="w-100" style="height: 50px;" asp-for="ProductRequest.Status">
                            @if (Model.Product.Status == 0)
                            {
                                <option value="0" selected>In stock</option>
                                <option value="1">Out of stock</option>
                            }
                            else
                            {
                                <option value="0">In stock</option>
                                <option value="1" selected>Out of stock</option>
                            }
                        </select>
                    </div>
                    <div>
                        <input asp-for="ProductRequest.Image"
                               type="file"
                               placeholder="Image"
                               name="Image"/>
                        @if (!Model.Product.Image.IsNullOrEmpty())
                        {
                            <img loading="lazy"
                                 src="./images/@Model.Product.Image"
                                 alt="Image"
                                 style="width: 100px; height: 100px;"/>
                            <a asp-page="Edit"
                               asp-page-handler="DeleteImage"
                               asp-route-id="@Model.Product.Id"
                               class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this image?');">
                                Delete Image
                            </a>
                        }
                        <span asp-validation-for="ProductRequest.Image" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="ProductRequest.Description"
                               type="text"
                               class="message-box"
                               placeholder="Description"
                               name="Description"
                               value="@Model.Product.Description"/>
                        <span asp-validation-for="ProductRequest.Description" class="text-danger"></span>
                    </div>
                    <div>
                        <select asp-for="@Model.Product.CategoryId"
                                asp-items="@Model.Categories"
                                class="w-100"
                                style="height: 50px;">
                        </select>
                    </div>
                    <div class="d-flex">
                        <button>
                            UPDATE
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}